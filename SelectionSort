#include <iostream>
using namespace std;

void SelectionSort(int arr[],int size){
    for(int i=0;i<size;i++){
        int minIndex=0;
        int minValue=arr[0];
        for(int j=i+1;j<size;j++){
            if(arr[j]<minValue){
                minValue = arr[j];
                minIndex = j;
            }
        }
        if(minIndex!=0){
            int temp=arr[i];
            arr[i]=arr[minIndex];
            arr[minIndex]=temp;
        }
    }
}
int main() {
  int  arr[] = {10,5,30,2,4,15};
  int lenght =sizeof(arr)/sizeof(arr[0]);
 SelectionSort(arr, lenght);
  cout<<"array after sorting:"<<endl;
  for(int i=0;i<lenght;i++){
      cout<<arr[i]<<" ";
  }
    return 0;
}
